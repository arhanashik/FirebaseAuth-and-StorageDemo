<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blackspider.firebaseauthdemo" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.blackspider.firebaseauthdemo.LoginActivity"
            android:theme="@style/AppTheme.Dark"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.blackspider.firebaseauthdemo.MainActivity" android:theme="@style/AppTheme.Light" />
        <activity android:name="com.blackspider.firebaseauthdemo.SignupActivity" android:theme="@style/AppTheme.Dark" />
    </application>

</manifest>
